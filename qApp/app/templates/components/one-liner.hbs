<div class="row ddrow" style="padding:4px;">
	<div class="col-md-8">
		<div class="input-group">
			<div class="input-group-btn">
				<span class="dropdown ddLeft">
					{{view "select" 
									content=queryRules 
									optionLabelPath="content.name"
									selection=selectedFilter
									prompt="Select a filter..."}}
				</span>
				<span class="dropdown ddMid">
					{{#bs-dropdown}}
						{{#bs-dropdown-button}}
							&nbsp;&nbsp;&nbsp; <span class="caret"></span>
						{{/bs-dropdown-button}}
						{{#bs-dropdown-menu}}
							<li>{{#link-to "index"}}Something{{/link-to}}</li>
							<li>{{#link-to "index"}}Other{{/link-to}}</li>
						{{/bs-dropdown-menu}}
					{{/bs-dropdown}}
				</span>
				<span class="dropdown ddRight">
					{{view "select" 
									content=currentValues
									selection=selectedFilterValue
									prompt="Select a value..."}}
				</span>
			</div>
		</div>
	</div>
	<div class="col-md-4 text-right pull-right">
		<a id="addLiner" class="btn btn-primary btn-xs oneLinerButton">+</a>
	</div>
</div>

{{selectedFilter.name}} and {{selectedFilterValue}}
